<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/bottom_sheet_layout"
    android:gravity="center">


    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_margin="12dp"
        android:background="@drawable/delete_indicator_shape" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/product_sans_regular"
        android:gravity="center"
        android:text="Are you sure want to delete!"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/delete_no_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No"
        android:gravity="center"
        android:fontFamily="@font/product_sans_regular"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:padding="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/no_delete"/>
    <TextView
        android:id="@+id/delete_yes_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:gravity="center"
        android:fontFamily="@font/product_sans_regular"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="18dp"
        android:padding="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/yes_delete"/>



</LinearLayout>